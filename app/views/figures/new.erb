<h1> Create a New Figure</h1>

<form action="/figures" method="POST">
    <label><b>Name:</b></label>
        <input type="text" name="figure[name]" id="figure_name"><br><br>

    <label><b>Titles:</b></label>
        <% Title.all.each do |t| %>
            <label><%= t.name %></label>
            <input type="checkbox" name="figure[title_ids] []" id="title_<%= t.id %>" value="<% t.id %>">
        <% end %>
    <br><br>
    <label><b>Create New Title:</b></label>
        <input type="text" name="title[name]" id="new_title">
    <br><br>
    <label><b>Landmarks:</b></label>
        <% Landmark.all.each do |l| %>
            <label><%= l.name %></label>
            <input type="checkbox" name="landmark[landmark_ids] []" id="landmark_<%= l.id %>" value="<% l.id %>">
        <% end %>
    <br><br>
    <label><b>Create New Landmark</b></label><br><br>
        <label><b>Name:</b></label>
        <input type="text" name="landmark[name]" id="new_landmark"><br><br>
        <label><b>Year:</b></label>
        <input type="text" name="landmark[year_completed]"><br><br>
        <input type="submit" value="Create New Figure">
</form>



